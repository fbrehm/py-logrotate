compress
notifempty
missingok
delaycompress
rotate 4
create 0644 root root
createolddir 0755 root root
shred
shredcycles 2

/var/log/syslog /var/log/messages
{
	rotate 7
	daily
	nomissingok
	ifempty
	minsize 4M
	dateext
	olddir /var/log/.old
	nocreateolddir
	nocompress
	nodelaycompress
	noshred
	postrotate
		invoke-rc.d rsyslog rotate >/dev/null
	endscript
}

/var/log/all.log
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/rsyslog.log
/var/log/debug
{
	daily
	missingok
	notifempty
	minsize 4M
	dateext
	addextension .log
	olddir /var/log/.old
	compress
	delaycompress 0
	shredcycles 4
	sharedscripts
	postrotate
		invoke-rc.d rsyslog rotate >/dev/null
	endscript
}

/var/log/syslog.d/*.log {
	rotate 10
	# weekly
	hourly
	extension .log
	create
	missingok
	notifempty
	size 4M
	delaycompress 2
	dateext
	minage 1
	maxage 365
	compress
	olddir /var/log/syslog.d/.old
	mail frank@brehm-online.com
	maillast
	sharedscripts
	postrotate
		invoke-rc.d rsyslog rotate > /dev/null
	endscript
}

